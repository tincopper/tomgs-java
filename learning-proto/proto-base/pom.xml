                    </execution>
                    <execution>
                        <id>protoc-dubbo</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <protocPlugins>
                                <protocPlugin>
                                    <id>dubbo</id>
                                    <groupId>com.tomgs.learning</groupId>
                                    <artifactId>proto-compiler</artifactId>
                                    <version>${project.version}</version>
                                    <!--<mainClass>com.tomgs.proto.gen.dubbo.DubboGenerator</mainClass>-->
                                    <mainClass>com.tomgs.proto.gen.demo.DubboExtensionGenerator</mainClass>
                                </protocPlugin>
                            </protocPlugins>
                        </configuration>
                    </execution>
                    <execution>
                        <id>protoc-rule</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <protocPlugins>
                                <protocPlugin>
                                    <id>rule</id>
                                    <groupId>com.tomgs.learning</groupId>
                                    <artifactId>proto-compiler</artifactId>
                                    <version>${project.version}</version>
                                    <!--<mainClass>com.tomgs.proto.gen.dubbo.DubboGenerator</mainClass>-->
                                    <mainClass>com.tomgs.proto.gen.demo.RuleGenerator</mainClass>
                                </protocPlugin>
                            </protocPlugins>
                        </configuration>
                    </execution>
